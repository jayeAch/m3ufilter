{
  "name": "m3ufilter",
  "version": "1.0.1",
  "description": "M3U playlist filter and proxy server",
  "main": "dist/app-controller.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node --max-old-space-size=768 --optimize-for-size --max-semi-space-size=64 --turbo-filter='M3UFilterStream|handleGetm3u' dist/app-controller.js",
    "start:pm2": "pm2 start -i max npm --name \"m3u-filter\" -- run start",
    "pm2:stop": "pm2 stop m3u-filter",
    "pm2:restart": "pm2 restart m3u-filter",
    "pm2:logs": "pm2 logs m3u-filter",
    "pm2:delete": "pm2 delete m3u-filter",
    "pm2:save": "pm2 save",
    "pm2:setup": "pm2 setup",
    "test": "jest"
  },
  "author": "gewton",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.7",
    "compression": "^1.8.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.3",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.1",
    "@types/jest": "^29.7.0",
    "@types/node": "^22.7.6",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.15.2",
    "prettier": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pm2": {
    "ecosystem": {
      "apps": [
        {
          "name": "m3u-filter",
          "script": "npm",
          "args": "run start",
          "instances": "max",
          "exec_mode": "cluster",
          "env": {
            "NODE_ENV": "development"
          },
          "env_production": {
            "NODE_ENV": "production"
          },
          "log_date_format": "YYYY-MM-DD HH:mm Z",
          "error_file": "./logs/err.log",
          "out_file": "./logs/out.log",
          "log_file": "./logs/combined.log",
          "time": true,
          "max_memory_restart": "768M"
        }
      ]
    }
  }
}
