{
  "name": "m3ufilter",
  "version": "1.0.1",
  "description": "M3U playlist filter and proxy server",
  "main": "dist/app-controller.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node --max-old-space-size=768 --optimize-for-size --max-semi-space-size=64 --turbo-filter='M3UFilterStream|handleGetm3u' dist/app-controller.js",
    "start:pm2": "npx pm2 start -i max npm --name \"m3u-filter\" -- run start",
    "pm2:stop": "npx pm2 stop m3u-filter",
    "pm2:restart": "npx pm2 restart m3u-filter",
    "pm2:logs": "npx pm2 logs m3u-filter",
    "pm2:delete": "npx pm2 delete m3u-filter",
    "pm2:save": "npx pm2 save",
    "pm2:setup": "npx pm2 setup",
    "test": "jest"
  },
  "author": "gewton",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "pm2": "^6.0.13"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "babel-jest": "^30.1.1",
    "eslint": "^9.34.0",
    "jest": "^30.1.1",
    "node-mocks-http": "^1.17.2",
    "prettier": "3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
